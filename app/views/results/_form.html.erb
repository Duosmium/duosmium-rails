<%= form_with model: result, url: {action: "update"} do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% result.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :data %><br>
    <%= form.text_area :data %><br>
    <% result.errors.full_messages_for(:data).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>